<%- include('layout.ejs'); %>
    <div class="container h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-md-6">
                <h2 class="mb-3">Tarefas Web</h2>
                <div class="card">
                    <div class="card-header">Login</div>
                    <div class="card-body">
                        <form class="form-horizontal" method="post" action="/login">
                            <div class="form-group">
                                <label for="username" class="cols-sm-2 control-label">Usuário</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user"
                                                aria-hidden="true"></i></span>
                                        <input type="text" class="form-control rounded mb-3" name="username"
                                            id="username" placeholder="Digite seu usuário" required />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="password" class="cols-sm-2 control-label">Senha</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-lock fa-lg"
                                                aria-hidden="true"></i></span>
                                        <input type="password" class="form-control rounded mb-3" name="password"
                                            id="password" placeholder="Digite sua senha" required />
                                    </div>
                                </div>
                            </div>
                            <div class="alert alert-primary message" role="alert">

                                <% if (locals.errors) { %>
                                    <%= errors.message %>
                                        <% } %>
                            </div>
                            <div class="d-flex form-group justify-content-center mt-3">
                                <button type="submit" class="btn btn-primary btn-lg btn-block login-button w-75">Entrar
                                    no sistema</button>
                            </div>
                            <div class="d-flex login-register justify-content-center mt-3">
                                <a href="/signup">Ainda não tem login? Crie um novo usuário aqui.</a>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

    </body>

    </html>